<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".persegi">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="panjang_persegi"
            android:ems="10"
            android:id="@+id/panjang_persegi" tools:text="Panjang" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="lebar_persegi"
            android:ems="10"
            android:id="@+id/lebar_persegi"
            app:layout_constraintStart_toStartOf="@+id/panjang_persegi"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/panjang_persegi"
            app:layout_constraintEnd_toEndOf="@+id/panjang_persegi" tools:text="Lebar"/>
    <Button
            android:text="hitung_persegi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hitung_persegi" tools:text="Hitung"
            app:layout_constraintStart_toStartOf="@+id/lebar_persegi"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lebar_persegi"
    />
    <TextView
            android:text="luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_luas" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/hitung_persegi"
            app:layout_constraintStart_toStartOf="@+id/hitung_persegi" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" tools:text="Luas : "/>
</androidx.constraintlayout.widget.ConstraintLayout>
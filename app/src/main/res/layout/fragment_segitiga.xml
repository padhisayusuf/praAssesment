<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".segitiga">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="tinggi_segitiga"
            android:ems="10"
            android:id="@+id/tinggi_segitiga" tools:text="Tinggi"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/alas_segitiga"
            app:layout_constraintStart_toStartOf="@+id/alas_segitiga"
            app:layout_constraintEnd_toEndOf="@+id/alas_segitiga"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="alas_segitiga"
            android:ems="10"
            android:id="@+id/alas_segitiga"
            tools:text="Alas"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
    <Button
            android:text="hitung_segitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hitung_segitiga" tools:text="Hitung"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tinggi_segitiga"
            app:layout_constraintStart_toStartOf="@+id/tinggi_segitiga"/>
    <TextView
            android:text="luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="256dp"
            android:id="@+id/tvLuas" app:layout_constraintStart_toStartOf="@+id/hitung_segitiga"
            app:layout_constraintEnd_toEndOf="@+id/hitung_segitiga" tools:text="Luas"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvKeliling" app:layout_constraintStart_toStartOf="@+id/tvLuas"
            app:layout_constraintEnd_toEndOf="@+id/tvLuas" app:layout_constraintTop_toBottomOf="@+id/tvLuas"
            android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>